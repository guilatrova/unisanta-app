<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>

        <item name="android:textColorSecondary">@color/gray</item>

        <!--
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/white</item>-->
    </style>

    <style name="AppTheme.Red" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/dark_red</item>

        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/dark_red_bright</item>
        <item name="colorControlHighlight">@color/dark_red_bright</item>
        <item name="colorControlActivated">@color/light_red</item>
    </style>

    <style name="WhiteDialogTheme" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="@android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="ToolbarWhiteIcon" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTabLayout" parent="AppTheme">
        <item name="tabIndicatorColor">?android:attr/textColorPrimaryInverse</item>
        <item name="tabBackground">?attr/colorPrimaryDark</item>
        <item name="tabTextColor">@color/light_red</item>
        <item name="tabSelectedTextColor">?android:attr/textColorPrimaryInverse</item>

        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
    </style>

    <style name="EmptyTextView" parent="AppTheme">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

    <style name="TextViewTopicTitle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
